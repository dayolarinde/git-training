<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Preferred_Phone_Validation</fullName>
    <active>false</active>
    <errorConditionFormula>AND (ISBLANK(PersonWorkPhone__c),ISPICKVAL(Preferred_Phone_Number__c,&quot;Employer&quot;))</errorConditionFormula>
    <errorMessage>Please provide a work phone if the Preferred Phone Number is Employer</errorMessage>
</ValidationRule>
